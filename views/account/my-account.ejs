<div class="form-container account">
  <h1><%= title %></h1>

  <% if (typeof message !== 'undefined' && message) { %>
  <div class="flash-message">
    <p><%= message %></p>
  </div>
  <% } %> <% if (typeof errors !== 'undefined' && errors) { %>
  <ul class="notice">
    <% errors.array().forEach(error => { %>
    <li><%= error.msg %></li>
    <% }) %>
  </ul>
  <% } %>

  <div class="form-content">
    <div class="form-card">
      <h2 class="h3">Welcome <%= account_firstname %></h2>

      <!-- Siempre visible -->
      <p><a href="/account/update/<%= account_id %>">Update Account Information</a></p>
    </div>

    <div class="form-card">
      <% if (account_type === 'Employee' || account_type === 'Admin') { %>
      <h3 class="h3">Inventory Management</h3>
      <p><a href="/inv">Manage Inventory</a></p>
      <% } %>
    </div>
  </div>
</div>
