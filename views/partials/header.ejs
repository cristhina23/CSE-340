<header id="top-header">
  <span class="siteName">
    <a href="/" title="Return to home page" class="siteName">CSE Motors</a>
  </span>
  <div id="tools">
    <% if (loggedin) { %>
      <span>Welcome <%= accountData.account_firstname %></span>
      <a href="/account/" title="Manage your account" class="account-link">Account Management</a>
      <a href="/account/logout" title="Click to log out" class="logout">Logout</a>
    <% } else { %>
      <a title="Click to log in" href="/account/login" class="login">My Account</a>
    <% } %>
  </div>
</header>

